<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RecipePOC.RegisterUser"
                          BackgroundColor="#F9F1F0"
             Shell.BackgroundColor="#F9EDEC"
             Shell.TitleColor="#000000"
             Padding="0"
             Title="RegisterUser">
    <Shell.TitleView
         Shell.BackButtonBehavior="{x:Static Shell.BackButtonBehavior.Default}">
        <Grid ColumnDefinitions="*,Auto"
              Padding="12,0" 
              HeightRequest="56">
            <Label Text="Register"
                   FontSize="25"
                   TextColor="#E57373"
                   FontAttributes="Bold"
                   VerticalOptions="Center" />
        </Grid>
    </Shell.TitleView>
    <ScrollView>
        <VerticalStackLayout Padding="40,60,40,20" Spacing="20">
            <Frame WidthRequest="80"
                   HeightRequest="80"
                   BackgroundColor="#FDF5F4"
                   CornerRadius="40"
                   HasShadow="False"
                   HorizontalOptions="Center">
                <Image Source="chef_icon.png"
                       WidthRequest="40"
                       HeightRequest="40"
                       HorizontalOptions="Center"
                       VerticalOptions="Center" />
            </Frame>
            <Label Text="Kitchen Companion"
                   FontFamily="OpenSansRegular"
                   FontAttributes="Bold"
                   FontSize="24"
                   HorizontalOptions="Center"
                   TextColor="#6D4C4C"/>

            <Label Text="Your personal recipe and meal planner"
                   FontFamily="OpenSansRegular"
                   FontSize="14"
                   HorizontalOptions="Center"
                   TextColor="#A78585"/>
            <VerticalStackLayout Spacing="6">
                <Label Text="Username"
                       FontSize="14"
                       FontFamily="OpenSansRegular"
                       TextColor="#6D4C4C"/>
                <Entry Placeholder="Enter your username"
                       x:Name="UserName"
                       BackgroundColor="#FDF5F4"
                       TextColor="#333"
                       PlaceholderColor="Black"
                       HeightRequest="45" />
            </VerticalStackLayout>
            <VerticalStackLayout Spacing="6">
                <Label Text="Password"
                       FontSize="14"
                       FontFamily="OpenSansRegular"
                       TextColor="#6D4C4C"/>
                <Grid ColumnDefinitions="*,Auto">
                    <Entry x:Name="PasswordEntry"
                           Placeholder="Enter your password"
                           IsPassword="True"
                           BackgroundColor="#FDF5F4"
                           TextColor="#333"
                           PlaceholderColor="Black"
                           HeightRequest="45" /> 
                </Grid>
                <Grid ColumnDefinitions="*,Auto">
                    <Entry x:Name="ConfirmPassword"
                           Placeholder="Confirm your password"
                           IsPassword="True"
                           BackgroundColor="#FDF5F4"
                           TextColor="#333"
                           PlaceholderColor="Black"
                           HeightRequest="45" />
                </Grid>
            </VerticalStackLayout> 
            <Button Text="Register"
                    BackgroundColor="#8B6B6B"
                    TextColor="White"
                    FontFamily="OpenSansRegular"
                    CornerRadius="10"
                    HeightRequest="48"
                     Clicked="OnRegisterClicked"/>
            <Grid ColumnDefinitions="*,Auto,*" Margin="0,10">
                <BoxView HeightRequest="1" BackgroundColor="#E0D1D1" VerticalOptions="Center"/>
                <Label Grid.Column="1"
                       Text="or"
                       FontSize="14"
                       FontFamily="OpenSansRegular"
                       TextColor="#B09E9E"
                       Margin="10,0"/>
                <BoxView Grid.Column="2" HeightRequest="1" BackgroundColor="#E0D1D1" VerticalOptions="Center"/>
            </Grid>
            <Button Text="Continue with Google"
                    BackgroundColor="#FFF9F9"
                    TextColor="#9A7B7B"
                    FontFamily="OpenSansRegular"
                    BorderColor="#E0D1D1"
                    BorderWidth="1"
                    CornerRadius="10"
                    HeightRequest="48"/>

            <Button Text="Continue with Apple"
                    BackgroundColor="#FFF9F9"
                    TextColor="#9A7B7B"
                    FontFamily="OpenSansRegular"
                    BorderColor="#E0D1D1"
                    BorderWidth="1"
                    CornerRadius="10"
                    HeightRequest="48"/>
            <HorizontalStackLayout HorizontalOptions="Center" Margin="0,10,0,0">
                <Label Text="Already have an account?"
                       FontSize="13"
                       FontFamily="OpenSansRegular"
                       TextColor="#9A7B7B"/>
                <Label Text=" Login"
                       FontSize="13"
                       FontAttributes="Bold"
                       FontFamily="OpenSansRegular"
                       TextColor="#8B6B6B"/> 
            </HorizontalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>