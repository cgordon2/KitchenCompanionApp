<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RecipePOC.IngredientDetail"
             Shell.BackgroundColor="#F9EDEC"
             BackgroundColor="WhiteSmoke"
                          Shell.ForegroundColor="#2d2d2d" 

             Title="Kitchen Companion">
    <Shell.TitleView
    Shell.BackButtonBehavior="{x:Static Shell.BackButtonBehavior.Default}">
        <Grid ColumnDefinitions="*,Auto"
          Padding="12,0"
          HeightRequest="56">

            <!-- Page title -->
            <Label Text="Kitchen Companion"
               FontSize="25"
               TextColor="#E57373"
               FontAttributes="Bold"
               VerticalOptions="Center"
               HorizontalOptions="Start" />

            <!-- Right-aligned Edit button -->
            <Button Grid.Column="1"
                Text="Edit"
                FontSize="20"
                TextColor="#E57373"      
                BackgroundColor="Transparent"
                FontAttributes="Bold"
                HorizontalOptions="End"
                VerticalOptions="Center"
                Padding="0"  />
        </Grid>
    </Shell.TitleView>
    <VerticalStackLayout>
        <Border   
        BackgroundColor="#E57373"
        Padding="15"
        Margin="10"
        HorizontalOptions="Fill"
        VerticalOptions="Start"> 
            <Grid ColumnDefinitions="Auto,*"
      Padding="0"
      Margin="0">

                <!-- LARGE IMAGE ON THE LEFT -->
                <Border Grid.Column="0"
        WidthRequest="100" 
        BackgroundColor="Transparent"
        StrokeThickness="0" 
        HorizontalOptions="Start"
        StrokeShape="RoundRectangle 8">

                    <Image Source="food.jpg"
           Aspect="AspectFill" />
                </Border>
                <!-- YOUR EXISTING STACK -->
                <VerticalStackLayout Grid.Column="1"
                         Spacing="6"
                         Padding="10,0,0,0"
                         VerticalOptions="Center">

                    <HorizontalStackLayout Spacing="6" VerticalOptions="Center">
                        <Image Source="food_icon.png"
                   WidthRequest="20"
                   HeightRequest="20"
                   Aspect="AspectFit"/>
                        <Label Text="{Binding RecipeName}"
                   FontSize="16"
                   FontAttributes="Bold"
                   TextColor="White"/>
                    </HorizontalStackLayout>
                    <HorizontalStackLayout Spacing="6" VerticalOptions="Center"> 
                        <Label Text="{Binding Description}"
                               FontSize="16"
                               TextColor="White"/>
                    </HorizontalStackLayout>
                    <!-- <HorizontalStackLayout Spacing="6" VerticalOptions="Center">
                        <Image Source="calendar.png"
                   WidthRequest="20"
                   HeightRequest="20"/>
                        <Label Text="Expires on 9/12/2026"
                   FontSize="16"
                   TextColor="White"/>
                    </HorizontalStackLayout>

                    <HorizontalStackLayout Spacing="6" VerticalOptions="Center">
                        <Image Source="supply.png"
                   WidthRequest="20"
                   HeightRequest="20"/>
                        <Label Text="Quantity Remaining: 1/2"
                   FontSize="14"
                   TextColor="White"/>
                    </HorizontalStackLayout>

                    <ProgressBar Progress="0.5"
                     HeightRequest="10"
                     HorizontalOptions="Fill"
                     ProgressColor="Black"
                     BackgroundColor="WhiteSmoke"/>-->
                </VerticalStackLayout>

            </Grid>


        </Border>
        <Label Text="Ingredients List" Padding="10"/>
        <ListView x:Name="IngredientList"
                  ItemsSource="{Binding Ingredients}"
                  Margin="10"
                  HasUnevenRows="True"
                  BackgroundColor="White"
                  SeparatorVisibility="Default">

            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <HorizontalStackLayout Padding="10" Spacing="10">

                            <Image Source="bullet.png"
           WidthRequest="12"
           HeightRequest="12"/>

                            <VerticalStackLayout Spacing="2" VerticalOptions="Center">

                                <Label Text="{Binding Name}"
                                       FontSize="16"
                                       TextColor="Black"/>

                                                        <Label Text="{Binding store}"
                                       FontSize="14"
                                       TextColor="Grey"/>

                                                        <Label Text="{Binding storeUrl}"
                                       FontSize="14"
                                       TextColor="Grey"/>
                                <Label Text="{Binding PrepTime}"
                                       FontSize="14"
                                       TextColor="Black"/>
                                <Label Text="{Binding CookTime}"
                                       FontSize="14"
                                       TextColor="Black"/>
                                <Label Text="{Binding Serves}"
                                       FontSize="14"
                                       TextColor="Black"/>
                                <Label FontSize="16" TextColor="#f4c430">
                                    <Label.Text>
                                        <MultiBinding StringFormat="Creator rating: {0}">
                                            <Binding Path="Stars" Converter="{StaticResource StarsToEmojiConverter}" />
                                        </MultiBinding>
                                    </Label.Text>
                                </Label>
                            </VerticalStackLayout>
                        </HorizontalStackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>

        </ListView>

    </VerticalStackLayout>
</ContentPage>