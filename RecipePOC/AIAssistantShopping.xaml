<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RecipePOC.AIAssistantShopping"
             BackgroundColor="#F9EDEC" 
             
             Shell.BackgroundColor="#F9EDEC"
             Shell.TitleColor="#000000"
             Shell.ForegroundColor="#000000"
             Shell.TabBarTitleColor="#000000" 
             Title="Kitchen Companion">
    <Shell.TitleView
    Shell.BackButtonBehavior="{x:Static Shell.BackButtonBehavior.Default}">
        <Grid ColumnDefinitions="*,Auto,Auto"
          Padding="12,0"
          HeightRequest="56">

            <!-- App Title -->
            <Label Text="Kitchen Companion"
               FontSize="25"
               FontFamily="OpenSansRegular"
               TextColor="#E57373"
               FontAttributes="Bold"
               VerticalOptions="Center" />

            <!-- ðŸ”” Notification Bell with Small Badge -->
            <Grid Grid.Column="1"
              HorizontalOptions="End"
              VerticalOptions="Center"
              Margin="0,0,8,6">
                <!-- Bell Icon -->
                <Label Text="ðŸ””"
                   FontSize="22"
                   VerticalOptions="Center"
                   HorizontalOptions="Center">
                    <Label.GestureRecognizers> 
                    </Label.GestureRecognizers>
                </Label>

                <!-- Notification Badge (smaller and offset) -->
                <Border
                BackgroundColor="#E57373"
                WidthRequest="12"
                HeightRequest="12"
                StrokeThickness="0" 
                HorizontalOptions="End"
                VerticalOptions="Start"
                Margin="0,-2,-2,0" >
                    <Label  
                       FontSize="8"
                        Text="{Binding NotifCount}"
                       HorizontalOptions="Center"
                       VerticalOptions="Center"
                       TextColor="Black"
                       FontAttributes="Bold" />
                </Border>
            </Grid>

            <!-- ðŸ‘¤ Profile Emoji -->
            <Border Grid.Column="2"
                WidthRequest="40"
                HeightRequest="40"
                StrokeThickness="0"
                HorizontalOptions="End"
                Margin="0,0,0,6"
                VerticalOptions="Center">
                <Label Text="ðŸ‘¤"
                   FontSize="22"
                   HorizontalOptions="Center"
                   VerticalOptions="Center" />
            </Border>
        </Grid>
    </Shell.TitleView>
    <Grid RowDefinitions="Auto,*,Auto"
          BackgroundColor="WhiteSmoke">
        <ScrollView Grid.Row="1" Padding="20,0,20,100">
            <VerticalStackLayout Spacing="15">
                <Label Text="Shopping Assistant"
FontFamily="OpenSansRegular"
                       FontSize="26"
               FontAttributes="Bold"
               TextColor="Black"
               HorizontalOptions="Center"
               VerticalOptions="Center"
               Margin="0,20,0,10"/>
                <Border StrokeShape="RoundRectangle 12"
                        BackgroundColor="#F7EAEA"
                        Padding="12"
                        StrokeThickness="0"
                        MaximumWidthRequest="250"
                        HorizontalOptions="End">
                    <Label Text="Hey, can you make a standard shopping list for me based on my liked recipes?"
                           FontSize="14"
                           TextColor="Black"
                           FontFamily="OpenSansRegular" />
                </Border>

                <Border StrokeShape="RoundRectangle 12"
                        BackgroundColor="WhiteSmoke"
                        Padding="12"
                        StrokeThickness="0"
                        MaximumWidthRequest="280"
                        HorizontalOptions="Start">

                    <VerticalStackLayout Spacing="8">
                        <Label Text="Sure! Here is what I have created for you:"
                               FontSize="14"
                               TextColor="Black"
                               FontFamily="OpenSansRegular"
                               Margin="0,0,0,10"/>

                        <ScrollView HeightRequest="200">
                            <Label
                                    FontFamily="OpenSansRegular"
                                    FontSize="14"
                                    TextColor="Black"
                                    LineBreakMode="WordWrap"
                                    Text="
                                Pantry Staples:&#10;
                                â€¢ Olive oil&#10;
                                â€¢ Salt (sea) &#10;
                                â€¢ Black pepper&#10;
                                â€¢ Sugar&#10;
                                â€¢ All-purpose flour&#10;
                                â€¢ Rice or pasta&#10;&#10; "
                                />
                        </ScrollView>
                    </VerticalStackLayout>
                </Border>

            </VerticalStackLayout>
        </ScrollView>

        <Grid Grid.Row="2"
      Margin="0,0,0,70"
      Padding="15,10"
      BackgroundColor="WhiteSmoke"
      VerticalOptions="End"
      HorizontalOptions="Fill">

            <Border StrokeShape="RoundRectangle 20"
            BackgroundColor="#F7EAEA"
            Padding="10"
            HorizontalOptions="Fill"
            VerticalOptions="Center">
                <Grid ColumnDefinitions="*,Auto" VerticalOptions="Center">
                    <Entry Placeholder="Message MarketAI..."
                   FontSize="14"
                   TextColor="Black"
                           FontFamily="OpenSansRegular"
                   PlaceholderColor="Gray"
                   BackgroundColor="Transparent"
                   HorizontalOptions="FillAndExpand" />
                    <Button Grid.Column="1"
                    Text="âž¤"
                    FontSize="18"
                    TextColor="Black"
                            FontFamily="OpenSansRegular"
                    BackgroundColor="Transparent"
                    Padding="5,0" />
                </Grid>
            </Border>
        </Grid>
        <Border Grid.Row="2" VerticalOptions="End" BackgroundColor="#FFF9F9">
            <Grid Padding="0,10,0,10" ColumnDefinitions="*,*,Auto,*,*">
                <Grid.Resources>
                    <ResourceDictionary>
                        <Style TargetType="Button">
                            <Setter Property="Padding" Value="0" />
                            <Setter Property="BorderWidth" Value="0" />
                            <Setter Property="BackgroundColor" Value="#FFF9F9" />
                            <Setter Property="FontSize" Value="32" />
                            <Setter Property="HorizontalOptions" Value="Center" />
                        </Style>
                    </ResourceDictionary>
                </Grid.Resources>
                <Button Grid.Column="0" Text="ðŸ " Clicked="Button_Clicked"/>
                <Button Grid.Column="1" Text="ðŸ“–" Clicked="Button_Clicked_1"/> 
                <Button Grid.Column="3" Text="ðŸ’¬" />
                <Button Grid.Column="4" Text="ðŸ‘¤" Clicked="Button_Clicked_4"/>
            </Grid>
        </Border>
    </Grid>
</ContentPage>
